<div class="page">
    <div class="form-horizontal form-horizontal2">
        <div class="page_start">
            <div class="leftmenu-container">
                <div class="sidebar-menu">
                    @{Html.RenderPartial("_PVPayrollMenu");}
                </div>
                <div class="sidebar-content">
                    <div class="main_heading heading_main">
                        <h1>Date Of Leaving / Separation date<span class="year-end">@ViewBag.Env_Fm_Fy</span></h1>
                        @{ Html.RenderPartial("_pvEmployeeSearchDateOfLeaving"); }
                        <input type="hidden" id="EmployeeId" />
                        <input type="hidden" id="lblDOR" />
                        <input type="hidden" id="lblDOJ" />
                        @*<div>
                                <label class="col-sm-2 control-label" id="Date">Conformation Date :</label>
                            </div>*@
                        <div class="col-md-12 mt_10">
                            <div class="inner_heading">
                                <h1>Date Of Leaving</h1>
                               
                                <div class="form-horizontal">
                                    <div class="col-md-6">
                                        <div class="form-group" id="statushide" >
                                            <label class="col-sm-7 control-label">Update Retirement Date/Seperation Date:</label>
                                            <div class="input-group date col-sm-5" id="Status_date">
                                                <input type="text" name="Statusdate1" id="Dor" Value="" class="form-control"  onchange="rdtDateValidationfrom()" required />
