                                    </div>

                                </div>

                                </div>
                          
                        </div>
                 
                        <div class="col-md-12 mt_10">
                            <div class="pull-right">
                                @*<button type="reset" id="btnCancel" onclick="resetForm()" value="reset" class="btn btn-default calcel">Cancel</button>*@
                                <button type="reset" id="btnCancel" value="reset" class="btn btn-default calcel" title="Clear the data">Cancel</button>
                                <button type="submit" id="btnsubmit" class="btn btn-primary" title="Submit details">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
   
    var dordata;
    function getDataAfterEmpSearch1440(empcode) {

        $("#btnsubmit").attr("disabled", false);
        $('#EmployeeId').val(empcode);
        hiddenempcode = empcode;
        dor = $("#lblDOR").text()
        $("#EmpCode").val(hiddenempcode);
        $("#Dor").val(dor);
    }

    $(document).ready(function () {
        $("#divempid").hide();
    });
    
    $('#btnsubmit').click(function () {
         
        dordata = $('#EmpCode').val() + "&" + $('#Dor').val();
        var dataToSend = JSON.stringify({
            'Retirementdata': dordata
        });

        CommonApiPOST("/Payroll/Transaction/UpdateRetirementDate", dataToSend, function (isSuccess) {

            if (isSuccess) {

                setTimeout(function () { window.location.reload(); clearfields(); }, g_pagereload_seconds);
            }
        });
    });
     
 
    var dat = '@date';
    var MonthNameyear;
    dteSplit = dat.split('-');
    var dateyear;
    MonthNameyear = dteSplit[0] + "-" + dteSplit[1] + "-" + dteSplit[2];
    $(function () {
     //   
         dateyear = new Date(MonthNameyear)
       //$('#Status_date').datepicker();
        $('#Status_date').datepicker('setDate', dateyear);

    });
   
    function rdtDateValidationfrom() {
      //  
        var lblDOJ1 = $('#lblDOJ').text();
        var Dor = $("#Dor").val();
        var DOR = $("#lblDOR").text();
        var DateJ = moment(Dor, "DD.MM.YYYY");
        var DateR = moment(lblDOJ1, "DD.MM.YYYY");

        if (DateJ < DateR)
        {
            showGlobalModal('W#Warning# Retirement date should be greater then DOJ'); 
            var Dor = $("#Dor").val("");
            $('#Status_date').datepicker('setDate', DOR);
            return false;
        }
    }
</script>

