@model Entities.LeaveViewModel

@{
    var rolepages = TempData["RolePages"].ToString();
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.RolePages = TempData["RolePages"];
}

<div class="container">
    <div class="panel with-nav-tabs panel-primary">
        <div class="panel-heading">
            @{
                <ul class="nav nav-tabs">
                    @if (rolepages.Contains("LVMLV"))
                    {
                        <li><a href=@Url.Action("LeaveRequest", "LeaveApply")>My Leaves</a></li>}
                    @if (rolepages.Contains("LVELB"))
                    {
                        <li><a href=@Url.Action("LeaveBalance", "LeaveBalance")>Emp Leave Balance</a></li>}
                    @if (rolepages.Contains("LVLAP"))
                    {
                        <li><a href=@Url.Action("LeaveApproval", "LeaveApproval")>Leave Approvals</a></li>}
                    @if (rolepages.Contains("LVMLA"))
                    {
                        <li class="active"><a href=@Url.Action("myleaveapproval", "Reports")>My Leave Approvals</a></li>}
                </ul>
            }
        </div>
    </div>
</div>
<div class="panel-body">
    <div class="tab-content">
        <div class="tab-pane fade  in active" id="tab2primary">
            <div class="page_st">
                <div class="page">
                    <div class="col-md-12">
                        <div class="main_heading">
                            <h1>My Leave Approvals Report</h1>
                            <div class="col-md-12">
                                <div class="table-responsive">
                                    <div class="table-responsive">
                                        <div class="branch_search">
                                            <div class="col-sm-12">
                                                <div class="form-horizontal">
                                                    <div class="branch_search">
                                                        <div class="col-md-5 col-sm-3 col-xs-12">
                                                            <div class="form-group">
                                                                <label class="col-sm-3 control-label label_left">Emp Code:</label>
                                                                <div class="col-sm-7">
                                                                    <input type="text" name="EmpId" id="EmpId" class="form-control" maxlength="10" onkeypress="return isNumber(event)" />
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-sm-4 ">
                                                            <div class="form-group">
                                                                <label class="col-sm-3 control-label label_left">Status:<span class="mandatory">*</span></label>
                                                                <div class="col-sm-9">
                                                                    @Html.DropDownList("Status", new[] {
                                                                    new SelectListItem() {Text = "All",Value = "All"},
                                                                     new SelectListItem() {Text = "Forwarded",Value = "Forwarded"},
                                                                     new SelectListItem() {Text = "Approved",Value = "Approved" },
                                                                     }, "Select Status", new { @class = "form-control", @id = "searchby" })

                                                                </div>

                                                            </div>
                                                        </div>
                                                        <div class="col-sm-1">
                                                            <button type="submit" class="btn btn-primary btn-sm pull-right" id="searchbtn" onclick="return myleaveapp();">Search</button>
                                                        </div>

                                                    </div>
                                                    <div id="gridControlling"></div>
                                                    <div style='margin-top: 20px;'>
                                                        <div style='float: left;'>
