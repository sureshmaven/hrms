
@{
    ViewBag.RolePages = TempData["RolePages"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    string rolepages = ViewBag.RolePages;
}
<style>
    .header {
        display: none;
    }

    .images_login img {
        width: 100%;
        height: 177px;
        border: 3px solid #5cb85c;
        border-radius: 16px;
        margin-top: 20px;
    }

    .images_login a {
        text-align: center;
        margin-top: 10px;
        width: 100%;
        margin-bottom: 20px;
    }

    .btn-default {
        color: #fff;
        background-color: #FF9800;
        border-color: #f3c046;
    }
</style>
<div class="logo-nav-left1 col-md-12 col-sm-12">
    <div class="row">
        <div class="header-grid">
            <img src="/Assets/images/LoginLogo.png" style="width: 28%; margin-top: 10px;">
            <div class="header-grid-left">
                <ul style="margin-top:36px;">
                    <li><i class="glyphicon glyphicon-log-in" aria-hidden="true"></i><a href="@Url.Action("Logout", "Home" )" class="login">Logout</a></li>
                </ul>
            </div>
        </div>
        <div class="clearfix"></div>

    </div>
</div>



<div class="page_st">
    <div class="page" style="height:500px;">
        <div class="col-md-12 col-sm-12">
            <div class="main_heading">
                <h1 style="text-align:center">Select Application</h1>
                <div class="col-sm-offset-3 col-sm-3">
                    <div class="images_login">
                        @{

                            if (rolepages != null)
                            {
                                if (rolepages.Contains("DBMain"))
                                {
                                    <a href="@Url.Action("Index", "DashBoard")"> <img src="/Assets/images/hrms.png" style="border: 3px solid #586f8a;" /></a>

                                    <a href="@Url.Action("Index", "DashBoard")" class="btn btn-success btn-md">HRMS</a>
                                }
                                if (rolepages.Contains("EDMain"))
                                {
                                    <a href="@Url.Action("EmployeeDashBoard", "DashBoard")"> <img src="/Assets/images/hrms.png" style="border: 3px solid #586f8a;" /></a>

                                    <a href="@Url.Action("EmployeeDashBoard", "DashBoard")" class="btn btn-success btn-md">HRMS</a>
                                }
                            }
                        }

                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="images_login">
                        <a href="@Url.Action("Index", "Payroll/PRDashboard")"> <img src="/Assets/images/payroll.png" /></a>
                        <a href="@Url.Action("Index", "Payroll/PRDashboard")" class="btn btn-default btn-md">PAYROLL</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



