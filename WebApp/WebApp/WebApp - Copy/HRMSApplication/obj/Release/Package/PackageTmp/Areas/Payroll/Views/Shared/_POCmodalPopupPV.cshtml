<script>
    var txtids = [];
    var empids = [];

    $("#btnEmpSearchModalOK").click(function () {
        empids = [];
        $("#rdbEmpAll1empsearch").prop("checked", true);
        $("input:checkbox[name=checkbox]:checked").each(function () {
            empids.push($(this).val());
        });
        $('input[name=txtsearchemp]').val(empids);
        $('#empSearchModal').modal('toggle'); //or  $('#IDModal').modal('hide');
        return false;
    });


    $("input[id='rdbEmpAll1empsearch']").click(function () {
        $("#rptGrid").find("tr:gt('')").remove();
        document.getElementById("txtEmployeeSearchBox1450").disabled = false;
        document.getElementById("pvBtnSearchEmpCodeWithChkModalPopup1450").disabled = false;
        document.getElementById("rdbEmpAll1empsearch").checked = true;
    });

    $("input[id='rdbEmpAll']").click(function () {
        $("#rptGrid").find("tr:gt('')").remove();
        document.getElementById("txtEmployeeSearchBox1450").disabled = true;
        document.getElementById("pvBtnSearchEmpCodeWithChkModalPopup1450").disabled = true;
        $("#rdbEmpAll").prop("checked", true);
        //$('input[name=txtsearchemp]').val('');
        $("#rdbEmpAll1empsearch").prop("checked", false);
    });



    $('#txtEmployeeSearchBox1450').keypress(function (event) {

        var keycode = (event.keyCode ? event.keyCode : event.which);
        if (keycode == '13') {
            rdbEmpAll1empsearch();
            return false;
        }
    });

    $("#pvBtnSearchEmpCodeWithChkModalPopup1450").click(function () {

        rdbEmpAll1empsearch();
        var ids = $("#txtEmployeeSearchBox1450").val();
        var txtdata = ids.split(',');
        txtids.push(txtdata);
        return false;
    });




    function rdbEmpAll1empsearch() {


        CommonApiGET('/Payroll/Common/SearchEmployeeWithChkIDs?EmpCode=' + $("#txtEmployeeSearchBox1450").val(), function (respData) {

            if (respData.length == 0) {
                toasterOptions();
                toastr.error('No user with Name / Code: ' + $("#txtEmployeeSearchBox1450").val(), 'No user');
                setTimeout(function () { window.location.reload(); }, g_pagereload_seconds);
            }
            //else if (respData.length == 1) {
            //    setSingleEmployee1440(respData[0]);
            //}
            else if (respData.length > 0) {
                //
                //open modal
                $("#empSearchModal").modal();
                //fill users data
                $('#jdtEmpSearch1440').DataTable({
                    "bFilter": true,
                    "destroy": true,
                    "paging": false,
                    "info": false,

                    data: respData,

                    "columns": [
                        {
                            "mData": null,
                            "bSortable": false,
                            "mRender": function (data, type, full) {

                                var array = $('#txtEmployeeSearchBox1450').val().split(",");
                                $.each(array, function (i) {
                                    $("input[value='" + array[i] + "']").prop('checked', true);
                                });

                                return '<input id="checkbox1" type="checkbox" name="checkbox" value="' + data.ECode + '" ><label for="checkbox1"><span></span></label>';
                            }
                        },
                        { "data": "ECode" },
                        { "data": "EName" },

                    ],
                    "order": [[0, 'asc']]
                });
            }
        });

    }

</script>

