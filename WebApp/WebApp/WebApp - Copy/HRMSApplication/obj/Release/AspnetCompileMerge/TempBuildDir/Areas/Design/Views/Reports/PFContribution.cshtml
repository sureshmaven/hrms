
@{
    ViewBag.Title = "PFContribution";
    Layout = "~/Areas/Payroll/Views/Shared/_PayrollLayout.cshtml";
}

<div class="page">
    <div class="form-horizontal form-horizontal2">
        <div class="page_start">
            <div class="col-md-2">
                @{Html.RenderPartial("_PVPayrollMenu");}
            </div>
            <div class="col-md-10">
                <div class="main_heading">
                    <h1>PF Contribution And Interest Calculation</h1>
                    <div class="mt_10">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">As on Date:</label>
                                <div class="col-sm-8 input-group date">
                                    <input type="text" class="form-control"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table id="incrm_stag_auth" class="display" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th rowspan="2">Month</th>
                                            <th colspan="3" style="text-align:center;">Contribution</th>
                                            <th rowspan="2">Total</th>
                                        </tr>
                                        <tr>
                                            <th>Own</th>
                                            <th>Bank</th>
                                            <th>VPF</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                Mar 2019
                                            </td>
                                            <td>
                                                Data
                                            </td>
                                            <td>
                                                Hdfc
                                            </td>
                                            <td>
                                                230
                                            </td>
                                            <td>
                                                5024
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                Mar 2019
                                            </td>
                                            <td>
                                                Data
                                            </td>
                                            <td>
                                                Hdfc
                                            </td>
                                            <td>
                                                230
                                            </td>
                                            <td>
                                                5024
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-12 mt_10">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Interest OP. Bal:</label>
                                <label class="col-sm-4 control-label">0.00</label>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Interest Acrued:</label>
                                <label class="col-sm-4 control-label">0.00</label>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label">Total Interest:</label>
                                <label class="col-sm-4 control-label">0.00</label>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="inner_heading">
                                <h1>Non Refundable Loan Details:</h1>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Availed Till Prev. Year From Own Contribution:</label>
                                    <label class="col-sm-4 control-label">0.00</label>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Availed During the Year from Own Contribution:</label>
                                    <label class="col-sm-4 control-label">0.00</label>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Availed Till Prev. Year From Bank Contribution:</label>
                                    <label class="col-sm-4 control-label">0.00</label>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Availed During the year from bank Contribution:</label>
                                    <label class="col-sm-4 control-label">0.00</label>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Total Non Refundable Loan Availed:</label>
                                    <label class="col-sm-4 control-label">0.00</label>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-4 control-label">Net Amount in EPF includuing Interest:</label>
                                    <label class="col-sm-4 control-label">0.00</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 mt_10">
                            <div class="pull-right">
                                <button type="reset" class="btn btn-default calcel">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#incrm_stag_auth').DataTable({
            destroy: true,
            "paging": false,
            "ordering": false,
            "info": false,
            "bFilter": false
        });
    });
</script>
