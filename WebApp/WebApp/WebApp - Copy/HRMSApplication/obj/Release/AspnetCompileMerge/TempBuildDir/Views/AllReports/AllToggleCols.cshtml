                            alignment: 'left',
                            image: 'data:image/jpeg;base64,'
                        });

                        doc.content[0].text = doc.content[0].text.trim();
                        doc.styles.title = {
                            fontSize: '20',
                            alignment: 'center'
                        };
                        doc.styles.message = {
                            fontSize: '9',
                            alignment: 'center'
                        };

                        if (showcolumns.length == 0) { //show all cols
                            showcolumns = table.columns(':visible')[0];
                        }
                        var bod = [];
                        var docIdx = reportMsgTop != '' ? 3 : 2;

                        doc.content[docIdx].table.body.forEach(function (line, i) {
                            if (i < doc.content[docIdx].table.body.length) {
                                var bodrow = [];
                                if (i == 0) { //header
                                    for (var j = 0; j < showcolumns.length; j++) {
                                        bodrow.push({ text: line[showcolumns[j]].text, style: 'tableHeader' });
                                    }
                                } else { //rows
                                    for (var j = 0; j < showcolumns.length; j++) {
                                        bodrow.push({ text: line[showcolumns[j]].text, style: 'defaultStyle' });
                                    }
                                }
                                bod.push(bodrow);
                            }
                        });

                        doc.pageOrientation = pageOrientation;
                        doc.content[docIdx].table.body = bod;
                        doc.content[docIdx].layout = 'lightHorizontalLines';

                        doc['footer'] = (function (page, pages) {
                            return {
                                columns: [
                                    'By: @ViewBag.LoginUserName , @ViewBag.LoginBranchName .',
                                    {
                                        alignment: 'right',
                                        text: [
                                            new Date().toLocaleDateString("en-IN", { day: "2-digit", month: "2-digit", year: "numeric", hour: '2-digit', minute: '2-digit' }),
                                            '    Page ', { text: page.toString() }, ' of ', { text: pages.toString() }
                                        ]
                                    }
                                ],
                                fontSize: '9',
                                margin: [40, 10]
                            }
                        });
                    }
                },
                {
                    text: 'PDF-Portrait',
                    titleAttr: 'PDF page orientation',
                    action: function (e, dt, node, config) {
                        if (node[0].innerText == 'PDF-Portrait') {
                            node[0].innerText = 'PDF-Landscape';
                            pageOrientation = 'Landscape';
                        } else {
                            node[0].innerText = 'PDF-Portrait';
                            pageOrientation = 'Portrait';
                        }
                    }
                }
            ],
            "columns": @Html.Raw(ViewBag.ReportColumns)
        });

        $('a.toggle-vis').on('click', function (e) {
            e.preventDefault();
            var colIdx = $(this).attr('data-column');
            var column = table.column(colIdx);
            // Toggle the visibility
            column.visible(!column.visible());
            showcolumns = table.columns(':visible')[0];
            //toggle checkbox
            var chkbox = $('#toggle-col-' + colIdx);
            if (chkbox.is(':checked')) {
                chkbox.prop("checked", false);
            } else {
                chkbox.prop("checked", true);
            }
        });
        $('.toggle-chk').on('click', function (e) {            
            var colIdx = $(this).attr('data-column');
            var column = table.column(colIdx);
            column.visible(!column.visible());
            showcolumns = table.columns(':visible')[0];
        });

    });

