@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="page_st">
        <div class="page col-md-12 col-sm-12">
            <div class="main_heading">
                <h1>Edit Designation</h1>
                <div class="form-horizontal col-md-offset-3 col-md-6 col-sm-9">         
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="col-md-12">
                    <div class="form-group">                  
                        <label class="col-sm-4 control-label">Code:<span class="mandatory">*</span></label>
                        <div class="col-sm-8">
                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", onBlur = "DesigCode()", onkeypress = "return onlyAlphabets(event)" } })
                            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                        </div>
                    </div>
                        </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-4 control-label">Name:<span class="mandatory">*</span></label>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", onBlur = "designame()", onkeypress = "return onlyAlphabets(event)" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-sm-4" })
                            <div class="col-sm-8">
                                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        </div>
                    <div class="col-md-12">
                        <div class="pull-right">
                            <button type="reset" class="btn btn-default">Cancel</button>
                            <input type="submit" value="Update" onclick="return desigedit();" class="btn btn-primary" />
                        </div>
                    </div>
                    </div>
            </div>
        </div>
    </div>
}

