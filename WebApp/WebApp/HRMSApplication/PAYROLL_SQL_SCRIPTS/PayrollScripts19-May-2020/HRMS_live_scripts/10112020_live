--Please credit C-offs to below employees with reason " Accrued for Performing Watchmen Duties"
--Emp code              Emp Name               C-Offs
--422                  S Shankar                11
--6386               S Bujji babu               6 

--Credit leaves
INSERT INTO [dbo].[Leaves_CreditDebit] values(	(select id from Employees where empid=	422),13,11	,0,123456,GETDATE(),
(select LeaveBalance from EmpLeaveBalance where empid=(select id from employees where empid=422) and LeaveTypeId=13 and year=2020),
'Accrued for Performing Watchmen Duties',
(select ShortName from Employees where empid=	422),
(select Department from Employees where empid=	422),
(select Branch from Employees where empid=	422),
(select CurrentDesignation from Employees where empid=	422),'Credit',
(select branch_value1 from employees where empid=	422),
(11	+(select LeaveBalance from EmpLeaveBalance where empid=(select id from employees where empid=422) and LeaveTypeId=13 and year=2020)),2020);

INSERT INTO [dbo].[Leaves_CreditDebit] values(	(select id from Employees where empid=	6386),13,6 ,0,123456,GETDATE(),
(select LeaveBalance from EmpLeaveBalance where empid=(select id from employees where empid=6386) and LeaveTypeId=13 and year=2020),
'Accrued for Performing Watchmen Duties',
(select ShortName from Employees where empid=	6386),
(select Department from Employees where empid=	6386),
(select Branch from Employees where empid=	6386),
(select CurrentDesignation from Employees where empid=	6386),'Credit',
(select branch_value1 from employees where empid=	6386),
(6+(select LeaveBalance from EmpLeaveBalance where empid=(select id from employees where empid=	6386) and LeaveTypeId=13 and year=2020)),2020);

--Update leave balance
update EmpLeaveBalance set LeaveBalance=
(11+(select LeaveBalance from EmpLeaveBalance where empid=(select id from employees where empid=422 and LeaveTypeId=13) and year=2020)) 
where LeaveTypeId=13 and empid=(select id from employees where empid=	422) and year=2020;

update EmpLeaveBalance set LeaveBalance=
(6+(select LeaveBalance from EmpLeaveBalance where empid=(select id from employees where empid=6386 and LeaveTypeId=13) and year=2020)) 
where LeaveTypeId=13 and empid=(select id from employees where empid=	6386) and year=2020;
