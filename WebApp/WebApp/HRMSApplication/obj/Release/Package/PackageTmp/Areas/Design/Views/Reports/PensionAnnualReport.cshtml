
@{
    ViewBag.Title = "PensionAnnualReport";
    Layout = "~/Areas/Payroll/Views/Shared/_PayrollLayout.cshtml";
}

<div class="page">
    <div class="form-horizontal form-horizontal2">
        <div class="page_start">
            <div class="col-md-2">
                @{Html.RenderPartial("_PVPayrollMenu");}
            </div>
            <div class="col-md-10">
                <div class="main_heading">
                    <h1>Pension Annual Report<span class="year-end">TGCAB 01-04-2018 - 31-03-2019</span></h1>
                    <div class="col-md-4">
                        <div class="inner_heading">
                            <h1>Year</h1>
                            <div class="table-responsive month_name_tbl">
                                <table id="month_name" class="display" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Select Year</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>2018 - 2019</td>
                                        </tr>
                                        <tr>
                                            <td>2017 - 2018</td>
                                        </tr>
                                        <tr>
                                            <td>2016 - 2017</td>
                                        </tr>
                                        <tr>
                                            <td>2015 - 2016</td>
                                        </tr>
                                        <tr>
                                            <td>2014 - 2015</td>
                                        </tr>
                                        <tr>
                                            <td>2013 - 2014</td>
                                        </tr>
                                        <tr>
                                            <td>2012 - 2013</td>
                                        </tr>
                                        <tr>
                                            <td>2011 - 2012</td>
                                        </tr>
                                        <tr>
                                            <td>2010 - 2011</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="inner_heading">
                            <h1>Employees</h1>
                            <input id="file" type="radio" name="file" value="1"><label for="file"><span><span></span></span>ST Employees</label>
                            <div class="clearfix"></div>
                            <input id="print" type="radio" name="file" value="2"><label for="print"><span><span></span></span>LT Employees</label>
                            <div class="clearfix"></div>
                            <input id="print" type="radio" name="file" value="3"><label for="print"><span><span></span></span>Both[ST & LT]</label>
                        </div>
                    </div>
                    <div class="col-md-12 mt_10">
                        <div class="pull-right">
                            <button type="reset" class="btn btn-default cancel">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#month_name').DataTable({
            destroy: true,
            "paging": false,
            "ordering": false,
            "info": false,
            "bFilter": false,
        });
    });
</script>



