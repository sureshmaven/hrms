                        var lastColX = null;
                        var lastColY = null;
                        var bod = [];
                        var oldOffice = '';
                        var docIdx = reportMsgTop != '' ? 3 : 2;

                        doc.content[docIdx].table.body.forEach(function (line, i) {
                            if (lastColX != line[0].text && line[0].text != '' && oldOffice != line[0].text) {

