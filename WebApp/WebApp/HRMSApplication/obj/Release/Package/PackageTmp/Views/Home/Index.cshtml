@if (showTimer)
{
    <div>
        <span>Account locked. Time remaining: <span id="timer">--:--</span></span>
    </div>

    <script>
        var lockEndTime = new Date('@lockEndTime.ToString("o")');

        // Check if lockEndTime is already stored in localStorage
        if (!localStorage.getItem('LockedUntil')) {
            localStorage.setItem('LockedUntil', lockEndTime.toISOString());
        } else {
            lockEndTime = new Date(localStorage.getItem('LockedUntil'));
        }

        var timerDisplay = document.getElementById("timer");

        function startCountdown() {
            var interval = setInterval(function () {
                var now = new Date();
                var remainingTime = Math.floor((lockEndTime - now) / 1000);

                if (remainingTime <= 0) {
                    clearInterval(interval);
                    timerDisplay.textContent = "00:00";
                    localStorage.removeItem('LockedUntil');
                    location.reload(); // Automatically refresh the page
                    return;
                }

                var minutes = Math.floor(remainingTime / 60);
                var seconds = remainingTime % 60;
                timerDisplay.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            }, 1000);
        }

        startCountdown();

        // Block refresh via F5 or Ctrl+R
        window.addEventListener('keydown', function (e) {
            if ((e.key === 'F5') || (e.ctrlKey && e.key.toLowerCase() === 'r')) {
                var now = new Date();
                if (now < lockEndTime) {
                    e.preventDefault();
                    alert("Please wait until the lock timer ends. You can't refresh now.");
                }
            }
        });

        // Prevent closing/reloading the tab
        //window.addEventListener('beforeunload', function (e) {
        //    var now = new Date();
        //    if (now < lockEndTime) {
        //        e.preventDefault();
        //       // e.returnValue = ''; // Required for Chrome
        //        alert("Please wait until the lock timer ends. You can't refresh now.");
        //    }
        //});
        window.addEventListener('beforeunload', function (e) {
            var now = new Date();
            if (now < lockEndTime) {
                e.preventDefault();
                e.returnValue = ''; // Triggers browser's default confirmation dialog
                // Don't use alert here — it's blocked in beforeunload!
                return ''; // Some browsers require this return value
                alert("Please wait until the lock timer ends. You can't refresh now.");
            }
        });

    </script>
}


