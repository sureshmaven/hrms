@model Entities.Employees

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    @{
        var message = TempData["AlertMessage"] ?? string.Empty;
    }
    var message = '@message';
    if (message) alert(message);
</script>
<style>
    #menuheader {
        display: none !important;
    }
</style>
<style>
    body {
        background: url(../../Assets/images/bg11.jpg) no-repeat center center fixed;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
        padding: 0px;
        margin: 0px;
    }
    .logo_login img {
        width: 100%;
    }
    .loginpage {
        background: rgba(255,255,255,0.5);
        margin-top: 13%;
        border: 1px solid rgba(0,0,0,0.5);
        border-radius: 10px;
        margin-bottom: 5%;
    }
    .login_footer {
        border-top: 1px solid #696666;
        padding-top: 10px;
        text-align: center;
    }
    .logo_login {
        text-align: center;
        margin-bottom: 25px;
    }
    .form-horizontal .control-label {
        margin-top: -7px;
    }
    .login_footer a {
        color: #000;
        font-size: 12px;
    }
</style>

@using (Html.BeginForm("ForgotPassword", "Home", "POST"))
{
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-7 col-sm-5 col-sm-offset-5 loginpage">
                <div class="panel-body">
                    <div class="logo_login"><a href="@Url.Action("Index", "Home")"><img src="~/Assets/images/LoginLogo.png" /></a></div>
                    <div class="form-horizontal" role="form">
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-4 control-label">Email Id / Emp Code:</label>
                            <div class="col-sm-8">
                                @Html.EditorFor(model => model.OfficalEmailId, new { htmlAttributes = new { @class = "form-control", maxlength = "30", onchange = "return validation();" } })
                                @Html.ValidationMessageFor(model => model.OfficalEmailId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group last">
                            <div class="col-sm-offset-4 col-sm-8">
                                <button id="button1id" name="button1id" class="btn btn-success btn-sm" type="submit" onclick="return forget();">Submit</button>
                            </div>
                        </div>
                        <div class="login_footer">
                            <a href="~/Home/Index">Back to login</a>
                        </div>
                    </div>
                    @if (ViewBag.Message != string.Empty)
                    {
                        <div class="text-success" id="msg">
                            @ViewBag.Message
                        </div>
                    }
                    else
                    {
                        <div class="text-danger">
                            In vaild details.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
<script>
    function validation()
    {      
        $("#msg").hide();
    }
</script>