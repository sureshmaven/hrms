<script>

    var loanids = [];
    var scheduleids = [];
    $("input[id='rdbLoanWise']").click(function () {
         
        scheduleids = [];
        document.getElementById("txtAllEmpSearchforLoansAndSchedules2").value = "";
        $('#txtAllEmpSearchforLoansAndSchedules1').hide();
        $('#txtAllEmpSearchforLoansAndSchedules2').hide();
        fillLoantypeDetails();
        // return false();
    });

    $("input[id='rdbScheduleWise']").click(function () {
         
        loanids = [];
        document.getElementById("txtAllEmpSearchforLoansAndSchedules1").value = "";
        $('#txtAllEmpSearchforLoansAndSchedules1').hide();
        $('#txtAllEmpSearchforLoansAndSchedules2').hide();
        // document.getElementById("txtAllEmpSearchforLoansAndSchedules").value = "";
        fillScheduletypeDetails();
    });

    $("#btnLoanTypeModalOK").click(function () {
         
        scheduleids = [];
        loanids = [];
        // $("#rdbLoanWise").prop("checked", true);
        $("input:checkbox[name=checkbox]:checked").each(function () {
            loanids.push($(this).val());
        });
        $('input[name=txtloansSchedules1]').val(loanids);
        $('#adv_loans_modal').modal('toggle'); //or  $('#IDModal').modal('hide');
        return false;
    });

    $("#btnScheduleTypeModalOK").click(function () {
         
        loanids = [];
        scheduleids = [];
        //('input:checkbox').removeAttr('checked');
        $("input:checkbox[name=checkbox1]:checked").each(function () {
            scheduleids.push($(this).val());
        });
        $('input[name=txtloansSchedules2]').val(scheduleids);
        $('#adv_Schedule_modal').modal('toggle'); //or  $('#IDModal').modal('hide');
        return false;
    });


</script>
