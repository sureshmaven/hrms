
@{
    ViewBag.Title = "MembersLeavingService";
    Layout = "~/Areas/Payroll/Views/Shared/_PayrollLayout.cshtml";
}

<div class="page">
    <div class="form-horizontal form-horizontal2">
        <div class="page_start">
            <div class="col-md-2">
                @{Html.RenderPartial("_PVPayrollMenu");}
            </div>
            <div class="col-md-10">
                <div class="main_heading">
                    <h1>Members Leaving Service</h1>
                    <div class="col-md-4">
                        <div class="inner_heading">
                            <h1>Employees</h1>
                            <input id="allemp" type="radio" name="allemp" value="1"><label for="allemp"><span><span></span></span>ST Employees</label>
                            <div class="clearfix"></div>
                            <input id="file" type="radio" name="file" value="2"><label for="file"><span><span></span></span>LT Employees</label>
                            <div class="clearfix"></div>
                            <input id="file" type="radio" name="file" value="3"><label for="supplementaryemployee"><span><span></span></span>BOTH [ST & LT]</label>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="inner_heading">
                            <h1>Month Name</h1>
                            <div class="table-responsive month_name_tbl mb_10">
                                <table id="month_name" class="display" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Select Month</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>MAR - 2019</td>
                                        </tr>
                                        <tr>
                                            <td>FEB - 2019</td>
                                        </tr>
                                        <tr>
                                            <td>JAN - 2019</td>
                                        </tr>
                                        <tr>
                                            <td>OCT - 2018</td>
                                        </tr>
                                        <tr>
                                            <td>SEP - 2018</td>
                                        </tr>
                                        <tr>
                                            <td>AUG - 2018</td>
                                        </tr>
                                        <tr>
                                            <td>JUL - 2018</td>
                                        </tr>
                                        <tr>
                                            <td>JUN - 2018</td>
                                        </tr>
                                        <tr>
                                            <td>MAY - 2018</td>
                                        </tr>
                                        <tr>
                                            <td>APR - 2018</td>
                                        </tr>
                                        <tr>
                                            <td>MAR - 2018</td>
                                        </tr>
                                        <tr>
                                            <td>FEB - 2018</td>
                                        </tr>
                                        <tr>
                                            <td>JAN - 2018</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                    <div class="col-md-12">
                        <div class="pull-right">
                            <button type="reset" class="btn btn-default cancel">Close</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#month_name').DataTable({
            destroy: true,
            "paging": false,
            "ordering": false,
            "info": false,
            "bFilter": false,
        });
    });
</script>

