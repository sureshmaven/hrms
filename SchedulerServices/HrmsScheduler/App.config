    <add key="TimeConsiderForHalfDayNew" value="01:00" />
    <add key="UserOutTimeGracePeriodMins" value="11" />
    <add key="ShiftUserInOutTimeToleranceMins" value="120" />
    <add key="sentissuesfrom" value="abc@gmail.com" />
    <add key="sentissuesto" value="raju.k@mavensoft.com" />
    <add key="ClientSettingsProvider.ServiceUri" value="" />
  </appSettings>
  <startup>
