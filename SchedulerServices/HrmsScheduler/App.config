<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <!--Log4Net-->
  <log4net debug="true">
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\TimesheetLogs.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="16MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%-5p %d %5rms %-22.22c{1} %-18.18M - %m%n" />
      </layout>
    </appender>
    <root>
      <level value="DEBUG" />
      <appender-ref ref="RollingLogFileAppender" />
    </root>          
  </log4net>
  <appSettings>
    <add key="Name" value="Office,Hotspot,Home" />
    <add key="mavendb" value="Data Source=mavensoftserver;Initial Catalog=Hrms_021224_before;User id=sa;Password=Maven@12345;" />
    <add key="timesheetdb" value="Data Source=mavensoftserver;Initial Catalog=sss_021224_before;User id=sa;Password=Maven@12345;" />
	  <!--<add key="mavendb" value="Data Source=DESKTOP-LLV7QHJ\SQLEXPRESS;Initial Catalog=hrms_test;Integrated Security=True;" />
          <add key="timesheetdb" value="Data Source=DESKTOP-LLV7QHJ\SQLEXPRESS;Initial Catalog=SSS_030225;Integrated Security=True;" />-->

